<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical" >
    
    <LinearLayout android:id="@+id/panelIconLeft"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/menubar">
        
        <Button android:id="@+id/back"
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:background="@drawable/back"
            android:text="Kembali"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:typeface="serif"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="48dp"
            android:textColor="#FFF"
            android:typeface="serif"
            android:textSize="28sp"
            android:text="TENTANG" />

    </LinearLayout>
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foto"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/sutia" />

            <TextView
                android:id="@+id/tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Aplikasi GISKuliner adalah aplikasi untuk mencari informasi mengenai tempat makan di Bekasi, alamat lokasi kuliner, dan deskripsi kuliner. Serta lokasi kuliner untuk mempermudah pencarian lokasi, dan rute untuk menuju lokasi kuliner yang dituju.\n\nDibuat Oleh :\nSutia Dwi Santika\nUniversitas Gunadarma\n2014"
            	android:textSize="17sp" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>